<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" padding="10" fx:controller="src.controller.SpeciesClassifierController">

    <Button fx:id="uploadButton" text="Upload Fish Image" prefWidth="200"/>

    <ImageView fx:id="imagePreview" fitWidth="300" fitHeight="250" preserveRatio="true" style="-fx-border-color: gray;"/>

    <Label text="Classification Result:" style="-fx-font-weight: bold;"/>

    <TextArea fx:id="classificationResultArea" editable="false" wrapText="true" prefHeight="120" style="-fx-font-size: 14px;"/>

    <Button fx:id="fetchDetailsButton" text="View Detailed Species Information" prefWidth="250"/>

</VBox>
